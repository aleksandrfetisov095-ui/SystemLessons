<Window x:Class="SystemLessons.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SystemLessons"
        mc:Ignorable="d"
        Title="Главное окно" Height="450" Width="800">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <Button Content="Открыть окно суммы" 
                    Click="OpenSumWindow_Click"
                    Width="200" Height="35" Margin="5"/>

            <Button Content="Открыть окно разности" 
                    Click="OpenDifferenceWindow_Click"
                    Width="200" Height="35" Margin="5"/>

            <Button Content="Открыть оба окна" 
                    Click="OpenBothWindows_Click"
                    Width="200" Height="35" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
