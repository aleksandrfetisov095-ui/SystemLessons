<Window x:Class="SystemLessons.View.DifferenceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SystemLessons.View"
        mc:Ignorable="d"
        Title="Окно разности" Height="300" Width="350">
    <Grid Margin="15">
        <StackPanel>
            <TextBlock Text="Вычисление разности" 
                       FontSize="18" FontWeight="Bold" 
                       HorizontalAlignment="Center" Margin="0,0,0,10"/>

            <TextBlock Text="Введите число:"/>
            <TextBox Text="{Binding InputText, UpdateSourceTrigger=PropertyChanged}" 
                     Height="30" Margin="0,5,0,10"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Вычислить разность" 
                        Command="{Binding CalculateCommand}"
                        Width="120" Height="30" Margin="5"/>
                <Button Content="Отмена" 
                        Command="{Binding CancelCommand}"
                        Width="80" Height="30" Margin="5"/>
            </StackPanel>

            <TextBlock Text="Результат:" Margin="0,20,0,5"/>
            <TextBox Text="{Binding Result, StringFormat=F2}" 
                     IsReadOnly="True" Height="30" Background="#FFF0F0F0"/>
        </StackPanel>
    </Grid>
</Window>
